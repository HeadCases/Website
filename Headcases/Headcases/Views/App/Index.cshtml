@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $("form").submit(function (ev) {
            if (!ev.isDefaultPrevented()) {
                $(".btn-go").button("loading");
                $(".result").html("");
                ev.preventDefault();
                $.post($(this).attr("action"), $(this).serialize(), function (data) {
                    $(".result").html(data);
                    $(".btn-go").button("reset");
                });
            }
        });
    </script>
